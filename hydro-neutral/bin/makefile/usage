#!/usr/bin/env bash

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

_usage() {
  echo
  echo -e "Hi $(whoami)!"
  echo
  echo -e "${YELLOW}make start${NC}"
  echo -e "${YELLOW}make deploy${NC}"
  echo
  echo -e "${GREEN}Development Setup${NC}"
  echo
  echo -e "${YELLOW}make check-tools${NC}       check required tools"
  echo
  echo -e "${GREEN}Workflow${NC}"
  echo
  echo -e "${YELLOW}make prettier${NC}          apply linting rules"
  echo
}
_usage
